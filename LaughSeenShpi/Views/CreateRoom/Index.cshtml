
 @model LaughSeenShpi.Models.Room


<div class="row vh-100 "  >
<div class="col-sm-12 my-auto">
<form method="post" >
    <fieldset>

        <div class="form-group col-sm-9 float-left">
            <div class="col-sm-12">
                <label for="exampleInputEmail1" class="form-text" style="font-size:25px">Room Name</label>
            </div>
            <div class="col-sm-12 float-left">
                <input type="text" class="form-control" asp-for="@Model.Name" id="exampleInputEmail1" required aria-describedby="emailHelp" placeholder="Enter room name">
                <small id="emailHelp" class="form-text text-muted">Enjoy chatting with your friends and your loving ones</small>
            </div>

            <div class="col-sm-12">
                <label for="exampleInputEmail1" class="form-text" style="font-size:25px">Movie URL</label>
            </div>
            <div class="col-sm-9 float-left">
                <input type="text" class="form-control" asp-for="@Model.MovieUrl" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter moive URL">
                @*<small id="emailHelp" class="form-text text-muted">Enjoy chatting with your friends and your loving ones</small>*@
            </div>

            <div class="col-sm-3 float-left">
                <button type="submit" asp-controller="CreateRoom" asp-action="Post" class="btn btn-primary col-sm-12">Submit room name</button>
            </div>

        </div>

    </fieldset>
</form>
        </div>
</div>