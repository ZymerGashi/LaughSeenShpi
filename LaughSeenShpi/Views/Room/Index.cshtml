@model LaughSeenShpi.Models.RoomMembers




<div class="col-sm-12">

    <div class="col-sm-8 navbar-dark bg-info" style="float:left; height:100vh;">


    </div>

    <div class="col-sm-4" style=" height:100vh;margin:0; float:left;">

        <div class="row h-100">

            <div class="container">
                <h3 class=" text-center">@Model.MemberName</h3>
                <div class="messaging">
                    <div class="inbox_msg">
                        <div class="mesgs col-sm-12">
                            <div class="msg_history" id="messageHistoryDiv">

                                <div class="outgoing_msg">
                                    <div class="sent_msg">
                                        <p>Test</p>
                                        <span class="time_date"> 11:01 AM    |    Today</span>
                                    </div>
                                </div>

                                @foreach (var message in ViewBag.messages)
                                {
                                    if (message.RoomMemberId == Model.MemberRoomId)
                                    {
                                        
                                        <div class="outgoing_msg">
                                            <div class="sent_msg">
                                                <p>@message.Content</p>
                                                <span class="time_date"> @message.SendTime   |    Today</span>
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                  
                                        <div class="incoming_msg">
                                            <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                                            <div class="received_msg">
                                                <div class="received_withd_msg" style="word-wrap:hyphenate">
                                                    <p>@message.Content</p>
                                                    <span class="time_date"> @message.SendTime</span>
                                                </div>
                                            </div>
                                        </div>

                                        
                                    }
                                }



                            </div>
                            <div class="type_msg">
                                <div class="input_msg_write">
                                    <input type="text" class="write_msg" id="MessageContent" placeholder="Type a message" />
                                    <input type="hidden" class="write_msg" id="MessageRoomMemberId" value="@Model.MemberID"  placeholder="Type a message" />
                                    <button type="button" asp-action="Index" id="SendMessageButton" class="msg_send_btn"></button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

        </div>

    </div>


</div>



